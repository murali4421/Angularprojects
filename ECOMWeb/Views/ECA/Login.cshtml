@model EcomCore.Voters

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">
    </div>

    <div class="col-md-4">
        <h3>Login</h3>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Voter_Id" class="control-label">User ID</label>
                <input asp-for="Voter_Id" class="form-control" />
                <span asp-validation-for="Voter_Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Voter_Id" class="control-label">Password</label>
                <input asp-for="Voter_Id" class="form-control" type="password" />
                <span asp-validation-for="Voter_Id" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


