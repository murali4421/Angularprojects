@model EcomCore.Voters
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">

    </div>
    
    <div class="col-md-4">
        <h3>Voter Details</h3>
        <hr />
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Voter_Id" class="control-label">Voter No</label>
                <input asp-for="Voter_Id" class="form-control" />
                <span asp-validation-for="Voter_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voter_Name" class="control-label"> Voter Name </label>
                <input asp-for="Voter_Name" class="form-control" />
                <span asp-validation-for="Voter_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"> Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voter_State_Id" class="control-label">State</label>
                @Html.DropDownList("StateList", ViewData["StateList"] as SelectList,"--Select--", new { @class="form-control" })
                <span asp-validation-for="Voter_State_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" type="file" name="VoterPhoto" id="VoterPhoto" onclick="fileCheck(this);" class="form-control" />
                <span asp-validation-for="Photo"  class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Voter_Verified" class="control-label"></label>
                <input asp-for="Voter_Verified" class="form-control" />
                <span asp-validation-for="Voter_Verified" class="text-danger"></span>
            </div>*@
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        @if (HttpContextAccessor.HttpContext.Session.GetString("Dashboard") != "NA")
        {
            <div>
                <a asp-action="Lists">Back to List</a>
            </div>
        }        
    </div>
</div>


