@model IEnumerable<EcomCore.VoterList>

@{
    ViewData["Title"] = "Lists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Voter List</h3>
<hr />
<p>
    <a asp-action="Add">New Voter</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayName("Voter No")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Address")
            </th>
            <th>
                @Html.DisplayName("City")
            </th>  
            <th>
                @Html.DisplayName("State")
            </th>
            <th>
                @Html.DisplayName("Photo")
            </th>
            <th>
                @Html.DisplayName("Verified")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Voter_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voter_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voter_State)
            </td>
            <td>
                <img src="/voter/RetrieveImage/@item.Id" alt="" height=30 width=30 />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voter_Verified)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
