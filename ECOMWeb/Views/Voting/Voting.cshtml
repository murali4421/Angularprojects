@model EcomCore.Voters

@{
    ViewData["Title"] = "Voting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">
    </div>

    <div class="col-md-4">
        <h3>Login</h3>
        <hr />
        <form asp-action="Voting" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Voter_Id" class="control-label">Voter No</label>
                <input asp-for="Voter_Id" class="form-control" />
                <span asp-validation-for="Voter_Id" class="text-danger"></span>
            </div>
            <p style="color:red">@TempData["Message"]</p>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


