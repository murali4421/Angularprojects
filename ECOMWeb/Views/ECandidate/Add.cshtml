@model EcomCore.CandidateList

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add</h1>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Party_Name" class="control-label">Party Name</label>
                @Html.DropDownList("PartyList", ViewData["PartyList"] as SelectList,"--Select--", new { @class="form-control" })
                <span asp-validation-for="Party_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat_State_Id" class="control-label">State</label>
                @Html.DropDownList("StateList", ViewData["StateList"] as SelectList,"--Select--", new { @class="form-control" })
                <span asp-validation-for="Seat_State_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MP_Seat" class="control-label"> Total Seats </label>
                <input asp-for="MP_Seat" class="form-control" />
                <span asp-validation-for="MP_Seat" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Lists">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
